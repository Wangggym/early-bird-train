# 应用配置
APP_NAME=早起鸟抢票助手
LOG_LEVEL=INFO

# 监控配置
DEPARTURE_STATION=大邑
ARRIVAL_STATION=成都南
TRAIN_NUMBER=C3380

# DAYS_AHEAD: 查询第N天的车票（今天算第1天）
# 例如：今天11月2号，DAYS_AHEAD=15 表示查询第15天（11月16号）
# 计算公式：目标日期 = 今天 + (DAYS_AHEAD - 1) 天
DAYS_AHEAD=15

# 调度配置
# SCHEDULE_DAYS_OF_WEEK: JSON数组格式，支持多个日期
# 0=周一, 1=周二, 2=周三, 3=周四, 4=周五, 5=周六, 6=周日
# 示例：
#   [0]           - 仅周一
#   [0, 2, 4]     - 周一、周三、周五
#   [0,1,2,3,4]   - 工作日全覆盖
SCHEDULE_DAYS_OF_WEEK=[0]
SCHEDULE_HOUR=15
SCHEDULE_MINUTE=30

# 重试配置
# MAX_RETRIES: 使用斐波那契退避策略重试次数（1-10）
# 重试间隔: 1秒, 1秒, 2秒, 3秒, 5秒, 8秒...
MAX_RETRIES=5

# DeepSeek配置 - 请替换为你的真实API Key
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# 邮件配置 - 请替换为你的真实邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=["recipient@example.com"]

