# Application Configuration
APP_NAME=Early Bird Train
LOG_LEVEL=INFO

# Monitoring Configuration
DEPARTURE_STATION=大邑
ARRIVAL_STATION=成都南
TRAIN_NUMBER=C3380

# DAYS_AHEAD: Query tickets for the Nth day (today is day 1)
# Example: Today is Nov 2, DAYS_AHEAD=15 means query day 15 (Nov 16)
# Calculation formula: Target date = Today + (DAYS_AHEAD - 1) days
DAYS_AHEAD=15

# Schedule Configuration
# SCHEDULE_DAYS_OF_WEEK: JSON array format, supports multiple days
# 0=Monday, 1=Tuesday, 2=Wednesday, 3=Thursday, 4=Friday, 5=Saturday, 6=Sunday
# Examples:
#   [0]           - Monday only
#   [0, 2, 4]     - Monday, Wednesday, Friday
#   [0,1,2,3,4]   - All weekdays
SCHEDULE_DAYS_OF_WEEK=[0]
SCHEDULE_HOUR=15
SCHEDULE_MINUTE=30

# Retry Configuration
# MAX_RETRIES: Number of retries using Fibonacci backoff strategy (1-10)
# Retry intervals: 1s, 1s, 2s, 3s, 5s, 8s...
MAX_RETRIES=5

# DeepSeek Configuration - Please replace with your real API Key
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Email Configuration - Please replace with your real email configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=["recipient@example.com"]

